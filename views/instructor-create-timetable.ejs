<body>

<!-- Header START -->
<%- include('./navbar') %>
<!-- Header END -->

<!-- **************** MAIN CONTENT START **************** -->
<main>
	
<!-- =======================
Page Banner START -->
<section class="py-0 bg-blue h-100px align-items-center d-flex h-200px rounded-0" style="background:url(../../images/pattern/00.png) no-repeat center center; background-size:cover;">
	<!-- Main banner background image -->
	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<!-- Title -->
				<h1 class="text-white">Submit a new TimeTable</h1>
				<p class="text-white mb-0">Read our <a href="#" class="text-white"><u></u></a> </p>	
			</div>
		</div>
	</div>
</section>
<!-- =======================
Page Banner END -->

<!-- =======================
Steps START -->
<section>
	<div class="container">
		<!-- Card body START -->
		<div class="card-body">
			<!-- Step content START -->
			<div class="bs-stepper-content">
				<form name='timetable' method='post' action='/instructor-create/timetable'>
					<!-- Step 1 content START -->
					<div class="content">
						<!-- Title -->
						<h4>Course details</h4>

						<hr> <!-- Divider -->

						<!-- Basic information START -->
						<div class="row g-4">
							<!-- Table START -->
                            <table class="table table-dark-gray align-middle p-4 mb-0">
                                <!-- Table head -->
                                <thead>
                                    <tr>
                                        <th scope="col" class="border-0 rounded-start"></th>
                                        <th scope="col" class="border-0">월요일</th>
                                        <th scope="col" class="border-0">화요일</th>
                                        <th scope="col" class="border-0">수요일</th>
                                        <th scope="col" class="border-0">목요일</th>
                                        <th scope="col" class="border-0 rounded-end">금요일</th>
                                    </tr>
                                </thead>
                                <!-- Table body START -->
                                <tbody>
                                    <!-- Table item -->
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">1교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon1" type="text" required></td>
                                        <td><input class="form-control" name="Tue1" type="text" required></td>
                                        <td><input class="form-control" name="Wed1" type="text" required></td>
                                        <td><input class="form-control" name="Thu1" type="text" required></td>
                                        <td><input class="form-control" name="Fri1" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">2교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon2" type="text" required></td>
                                        <td><input class="form-control" name="Tue2" type="text" required></td>
                                        <td><input class="form-control" name="Wed2" type="text" required></td>
                                        <td><input class="form-control" name="Thu2" type="text" required></td>
                                        <td><input class="form-control" name="Fri2" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">3교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon3" type="text" required></td>
                                        <td><input class="form-control" name="Tue3" type="text" required></td>
                                        <td><input class="form-control" name="Wed3" type="text" required></td>
                                        <td><input class="form-control" name="Thu3" type="text" required></td>
                                        <td><input class="form-control" name="Fri3" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">4교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon4" type="text" required></td>
                                        <td><input class="form-control" name="Tue4" type="text" required></td>
                                        <td><input class="form-control" name="Wed4" type="text" required></td>
                                        <td><input class="form-control" name="Thu4" type="text" required></td>
                                        <td><input class="form-control" name="Fri4" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">5교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon5" type="text" required></td>
                                        <td><input class="form-control" name="Tue5" type="text" required></td>
                                        <td><input class="form-control" name="Wed5" type="text" required></td>
                                        <td><input class="form-control" name="Thu5" type="text" required></td>
                                        <td><input class="form-control" name="Fri5" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <!-- Course item -->
                                        <td>
                                            <!-- Title -->
                                            <h6 class="mb-0 ms-2 table-responsive-title">6교시</h6>
                                        </td>
                                        <td><input class="form-control" name="Mon6" type="text" required></td>
                                        <td><input class="form-control" name="Tue6" type="text" required></td>
                                        <td><input class="form-control" name="Wed6" type="text" required></td>
                                        <td><input class="form-control" name="Thu6" type="text" required></td>
                                        <td><input class="form-control" name="Fri6" type="text" required></td>
                                    </tr>
                                </tbody>
                                <!-- Table body END -->
                            </table>
                            <!-- Table END -->
						</div>
						<!-- Basic information START -->
						
						<div class="d-flex justify-content-between mt-3">
							<button type="submit" value = "timetable" class="btn btn-success mb-2 mb-sm-0">저장하기</button>
						</div>
							
					<!-- Step 1 content END -->
					
				</form>
			</div>
		</div>
		<!-- Card body END -->
</section>
<!-- =======================
Steps END -->

</main>
<!-- **************** MAIN CONTENT END **************** -->

<!-- Footer START -->
<%- include('./footer-lite') %>
<!-- Footer END -->

<!-- Popup modal for add lecture START -->
<div class="modal fade" id="addLecture" tabindex="-1" aria-labelledby="addLectureLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-dark">
        <h5 class="modal-title text-white" id="addLectureLabel">Add Lecture</h5>
        <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
      </div>
      <div class="modal-body">
        <form class="row text-start g-3">
					<!-- Course name -->
					<div class="col-12">
						<label class="form-label">Course name <span class="text-danger">*</span></label>
						<input type="text" class="form-control" placeholder="Enter course name">
					</div>
				</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger-soft my-0" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success my-0">Save Lecture</button>
      </div>
    </div>
  </div>
</div>
<!-- Popup modal for add lecture END -->

<!-- Popup modal for add topic START -->
<div class="modal fade" id="addTopic" tabindex="-1" aria-labelledby="addTopicLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-dark">
        <h5 class="modal-title text-white" id="addTopicLabel">Add topic</h5>
        <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
      </div>
      <div class="modal-body">
        <form class="row text-start g-3">
					<!-- Topic name -->
					<div class="col-md-6">
						<label class="form-label">Topic name</label>
						<input class="form-control" type="text" placeholder="Enter topic name">
					</div>
					<!-- Video link -->
					<div class="col-md-6">
						<label class="form-label">Video link</label>
						<input class="form-control" type="text" placeholder="Enter Video link">
					</div>
					<!-- Description -->
					<div class="col-12 mt-3">
						<label class="form-label">Course description</label>
						<textarea class="form-control" rows="4" placeholder="" spellcheck="false"></textarea>
					</div>
					<!-- Buttons -->
					<div class="col-6 mt-3">
						<div class="btn-group" role="group" aria-label="Basic radio toggle button group">
							<!-- Free button -->
							<input type="radio" class="btn-check" name="options" id="option1" checked="">
							<label class="btn btn-sm btn-light btn-primary-soft-check border-0 m-0" for="option1">Free</label>
							<!-- Premium button -->
							<input type="radio" class="btn-check" name="options" id="option2">
							<label class="btn btn-sm btn-light btn-primary-soft-check border-0 m-0" for="option2">Premium</label>
						</div>
					</div>
				</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger-soft my-0" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success my-0">Save topic</button>
      </div>
    </div>
  </div>
</div>
<!-- Popup modal for add topic END -->

<!-- Popup modal for add faq START -->
<div class="modal fade" id="addQuestion" tabindex="-1" aria-labelledby="addQuestionLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-dark">
        <h5 class="modal-title text-white" id="addQuestionLabel">Add FAQ</h5>
        <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
      </div>
      <div class="modal-body">
        <form class="row text-start g-3">
					<!-- Question -->
					<div class="col-12">
						<label class="form-label">Question</label>
						<input class="form-control" type="text" placeholder="Write a question">
					</div>
					<!-- Answer -->
					<div class="col-12 mt-3">
						<label class="form-label">Answer</label>
						<textarea class="form-control" rows="4" placeholder="Write a answer" spellcheck="false"></textarea>
					</div>
				</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger-soft my-0" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success my-0">Save topic</button>
      </div>
    </div>
  </div>
</div>
<!-- Popup modal for add faq END -->

